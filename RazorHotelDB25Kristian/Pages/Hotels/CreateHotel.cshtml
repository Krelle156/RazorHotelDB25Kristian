@page
@model RazorHotelDB25Kristian.Pages.Hotels.CreateHotelModel
@{
    ViewData["Title"] = "Create a hotel";
}


<form method="post">
    <div class="form-group">
        <label asp-for="@Model.HotelNo" class="control-label"></label>
        <input asp-for="@Model.HotelNo" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="@Model.HotelName" class="control-label"></label>
        <input asp-for="@Model.HotelName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.HotelAddress" class="control-label"></label>
        <input asp-for="@Model.HotelAddress" class="form-control" />
    </div>


    <input type="submit" value="Gem" class="btn btn-primary" />
</form>